---
const allPosts = await Astro.glob("../pages/posts/*.md");
const allTags = [
    ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];
---

<div class="tags">
    {
        allTags.map((tag) => (
            <p class="tag">
                <a href={`/tags/${tag}`}>{tag}</a>
            </p>
        ))
    }
</div>

<style>
    a {
        color: #00539f;
        text-decoration: none;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
    }

    .tag {
        margin: 0.25em;
        border: solid 1px #a1a1a1;
        border-radius: 0.5em;
        padding: 0.5em 1em;
        font-size: 1.15em;
        background-color: #f8fcfd;
    }
</style>
